{
  "name": "Tinder Auto Like",
  "version": "1.4.4",
  "manifest_version": 3,
  "description": "Automates Tinder Web recs: refresh once, open profile, apply filters (age/distance/photos/keywords), then like or nope in a loop.",
  "permissions": [
    "activeTab",
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "https://tinder.com/*"
  ],
  "action": {
    "default_title": "Tinder Auto Like",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://tinder.com/app/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ]
}
